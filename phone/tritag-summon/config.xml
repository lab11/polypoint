<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.umich.eecs.lab11.polypoint.tritag" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TriTag App</name>
    <description>
        Get location data from the PolyPoint indoor localization system.
    </description>
    <author email="bradjc@umich.edu" href="http://lab11.eecs.umich.edu">
        Brad Campbell - Lab11
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
